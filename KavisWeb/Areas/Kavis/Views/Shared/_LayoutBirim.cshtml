<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - KAVİS</title>

    @Styles.Render("~/Areas/Kavis/Content/css")
    @Scripts.Render("~/Areas/Kavis/bundles/modernizr")

    <style type="text/css">

        th {
            text-align: center;
            vertical-align: middle !important;
            height: 50px;
        }
    </style>
    <link href="~/Areas/Kavis/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Areas/Kavis/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/Areas/Kavis/assets/toastr-master/toastr.css" rel="stylesheet" />
    <link href="~/Areas/Kavis/Content/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid mt-0 card" id="main-container">
        <div class="card-body">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">STRATEJİK PLAN İZLEME</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/KavisModul03">Ana Sayfa <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Birim Giriş
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Kavis/KavisModul03/Gostergeler">Performans Göstergeleriniz</a>
                                <a class="dropdown-item" href="/Kavis/KavisModul03/Faaliyetler">Faaliyetleriniz</a>
                            </div>
                        </li>

                    </ul>
                       
                                   
                        @Html.Action("UserMenu")
                   
                </div>

            </nav>


            <div class="container-fluid body-content pt-2">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; </p>
                </footer>
            </div>
        </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Areas/Kavis/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Areas/Kavis/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Kavis/Scripts/umd/popper.min.js"></script>



    <script src="~/Areas/Kavis/Scripts/jquery.validate.min.js"></script>
    <script src="~/Areas/Kavis/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>


    <script src="~/Areas/Kavis/assets/summernote/summernote-bs4.min.js"></script>

    <script src="~/Areas/Kavis/Scripts/sweetalert.min.js"></script>
    <script src="~/Areas/Kavis/assets/toastr-master/toastr.js"></script>
    <script src="~/Areas/Kavis/Scripts/select2.min.js"></script>
    <script src="~/Areas/Kavis/js/datas.js"></script>
    <script src="~/Areas/Kavis/js/templates.js"></script>
    <script src="~/Areas/Kavis/js/api.js"></script>
    <script type="text/javascript">

        (function ($) {
            $.fn.datepicker.dates['tr'] = {
                days: ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar"],
                daysShort: ["Pz", "Pzt", "Sal", "Çrş", "Prş", "Cu", "Cts", "Pz"],
                daysMin: ["Pz", "Pzt", "Sa", "Çr", "Pr", "Cu", "Ct", "Pz"],
                months: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz", "Ağustos", "Eylül", "Ekim", "Kasım", "Aralık"],
                monthsShort: ["Oca", "Şub", "Mar", "Nis", "May", "Haz", "Tem", "Ağu", "Eyl", "Eki", "Kas", "Ara"],
                today: "Bugün"
            };

            var datePickerOptions = {
                format: 'dd.mm.yyyy',
                autoclose: true,
                orientation: "top",
                language: "tr",
                templates: {
                    leftArrow: '<i class="fa fa-angle-left"></i>',
                    rightArrow: '<i class="fa fa-angle-right"></i>'
                },
                todayBtn: true,
                todayHighlight: true,
                weekStart: 1,
            };







            $('.date-input').datepicker(datePickerOptions);
        }(jQuery));



    </script>

    <script src="~/Areas/Kavis/js/sp.js"></script>
    <script src="~/Areas/Kavis/js/script.js"></script>
    <script src="~/Areas/Kavis/js/form.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>

