                    @foreach (var eylem in strateji.Eylemler)
                    {
                        <li class="list-group-item" data-id="@eylem.Id"> <span>@eylem.SiraNo. @eylem.Baslik</span> <button class="btn btn-sm btn-success float-right btn-faaliyetEkle"><span class="fa fa-plus"></span> Faaliyet Ekle</button> </li>
                    }
                </ul>
                <br />
            }
