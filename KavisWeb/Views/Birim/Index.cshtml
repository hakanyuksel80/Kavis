            </div>
        </div>

    </div>
</div>


@section scripts {

    <script type="text/javascript">

        class Faaliyetler {

            ekle(eylem, faaliyet) {
                let dugmelerHtml = this.tabloSatirDugmeSablon(true, true, true);
                let st = $(this.tabloSatirSablon(eylem, faaliyet, dugmelerHtml)).hide();
                $('#tableFaliyetler tbody').append(st);
                showTab("faaliyetler");
                st.fadeIn("5000");
            }

            guncelle(row, faaliyet) {
                let satir = $('#faaliyetEkle')[0].row;
                $($(row).children()[1]).text(faaliyet);
                console.log(faaliyet);
                this.SaveFaaliyet(faaliyet);

            }

            sil(button) {
                let satir = $(button).parents("tr");
                console.log(satir);
                satir.hide();
            }

            tabloSatirSablon(eylem = "", faaliyet = "", dugmelerHtml = "") {
                return `<tr><td>${eylem}</td><td>${faaliyet}</td><td>${dugmelerHtml}</td></tr>`;
            }

            tabloSatirDugmeSablon(duzenle, sil, durumGir) {

                let a = "";
                a += duzenle == true ? '<button class="btn btn-sm btn-success btn-faaliyetDuzenle" id="data">Düzenle</button> ' : '';
                a += sil == true ? '<button class="btn btn-sm btn-success btn-faaliyetSil">Sil</button> ' : '';
                a += durumGir == true ? '<button class="btn btn-sm btn-success btn-faaliyetDurum" data-target="#faaliyetDurum" data-toggle="modal">Durum Gir</button> ' : '';
                return a;

            }

            Load() {

                api_get("/api/BirimFaaliyetler", function (d) {
                    LoadList(d.Stratejiler);
                    LoadTable(d.Faaliyetler);
                });
            }

            SaveFaaliyet(d) {
                api_post("/api/BirimFaaliyetler", d).done(function () {
                });
            }


        }





        class FaaliyetForm extends Form {

            Clear() {
                super.Clear();
            }

            New(eylemId, eylemAdi) {
                this.Clear();
                $(this.modalId + " .eylemAdi").text(eylemAdi);
                this.Show();
            }

            Edit(id, eylemId, eylemAdi) {
                $(this.modalId + " #id").val(id);
                $(this.modalId + " .eylemAdi").text(eylemAdi);
                $(this.modalId + " #eylemId").val(eylemId);
                $(this.modalId + " #yeniFaaliyetAdi").val(faaliyetAdi);
                this.Show();
            }

            Save() {
                let data = this.GetValues();
                let eylem = $("#faaliyetEkle .eylemAdi").text();

                if (data.id == "") {
                    faaliyet.ekle(eylem, data.faaliyetAdi);
                } else {
                    let faaliyet = new Faaliyetler();
                    faaliyet.guncelle($('#faaliyetEkle')[0].row, faaliyetAdi);
                }
                return true;
            }


        }



        var faaliyetForm = new FaaliyetForm("#faaliyetEkle");
        var faaliyet = new Faaliyetler();

        function onFaaliyetEkleClickEvent() {

            let eylemAdi = $(this).prev().text();
            let eylemId = $(this).parent().data("id");

            faaliyetForm.New(eylemId, eylemAdi);
        }

        function onFaaliyetDuzenleClickEvent() {

            let eylemAdi = $(this).parent().parent().prev().prev().text();
            let faaliyetAdi = $(this).parent().parent().prev().text();
            //let eylemId = $(this).parent().data("id");
            faaliyetForm.row = $(this).parents("tr");

            faaliyetForm.Edit(id, eylemId, eylemAdi, faaliyetAdi);
        }



        function onFaaliyetSilClickEvent() {
            faaliyet.sil(this);
        }

        $(document).ready(function () {

            $('.btn-faaliyetEkle').on("click", onFaaliyetEkleClickEvent);
            $(document).on("click", '.btn-faaliyetDuzenle', onFaaliyetDuzenleClickEvent);
            $(document).on("click", '.btn-faaliyetSil', onFaaliyetSilClickEvent);

        });


    </script>

}
