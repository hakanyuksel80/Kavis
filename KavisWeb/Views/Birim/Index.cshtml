@model  KavisWeb.Entities.Views.ViewPerformansGirisModel

@{
    ViewBag.Title = "Birim";

    List<SelectListItem> birimListe = ViewBag.BirimSelectList as List<SelectListItem>;

}


<style type="text/css">

    .sp div {
        border: solid 1px black;
        margin-bottom: 10px;
    }
</style>

<input type="hidden" id="seciliBirimId" name="seciliBirimId" value="@(Model.Birim.Id)" />

<h4>PERFORMANS PROGRAMI GİRİŞ</h4>

@if (!String.IsNullOrEmpty(ViewBag.Hata))
{
    <div class="alert alert-danger">
        <p><span class="fa fa-error"></span>@ViewBag.Hata</p>
    </div>
}

@if (ViewBag.BirimListeGoster != null)
{
    <div class="row mt-4 mb-4">
        <div class="col">
            <div class="form-group">
                <label for="id">Birim</label>
                @Html.DropDownList("id", birimListe, "SEÇİNİZ", new { @class = "form-control" })
            </div>
        </div>
    </div>
}


<ul class="nav nav-tabs">
    <li class="nav-item"><a class="nav-link active" href="#eylemler" data-toggle="tab">Sorumlu Olduğunuz Eylemler</a></li>
    <li class="nav-item"><a class="nav-link" href="#faaliyetler" data-toggle="tab">Planladığınız Faaliyetler</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active show fade in p-2" id="eylemler">

        <div class="sp">
            @if (Model != null)
            {
                foreach (var strateji in Model.Stratejiler)
                {
                    <div class="strateji">@strateji.Kod - @strateji.Baslik</div>
                    <ul class="list-group">
                        @foreach (var eylem in strateji.Eylemler)
                        {
                            <li class="list-group-item" data-id="@eylem.Id">
                                <span>@eylem.SiraNo. @eylem.Baslik</span>
                                @if (Model.Birim.Kurum.FaaliyetGirisAcik)
                                {
                                    <button class="btn btn-sm btn-success float-right btn-faaliyetEkle"><span class="fa fa-plus"></span> Faaliyet Ekle</button>

                                }
                            </li>
                        }
                    </ul>
                    <br />
                }
            }

        </div>
    </div>
    <div class="tab-pane fade in p-2" id="faaliyetler">
        <br />
        <table class="table table-sm table-bordered" id="tableFaliyetler">
            <thead>
                <tr>
                    <th>Eylem Adı</th>
                    <th>Faaliyet Adı</th>
                    @if (!Model.Birim.Kurum.FaaliyetGirisAcik)
                    {
                        <th>Başlama ve Bitiş Tarihi</th>
                        <th>Faaliyet Kapsamında Gerçekleştirilenler</th>
                        <th>Çıktı ve Sonuç</th>
                        <th>Durum</th>
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model.Faaliyetler)
                    {
                <tr>
                    <td>@item.EylemAdi</td>
                    <td>@item.FaaliyetAdi</td>
                    @if (!Model.Birim.Kurum.FaaliyetGirisAcik)
                    {
                        <td>@item.Tarihler</td>
                        <td>@item.Gerceklesme</td>
                        <td>@item.Sonuc</td>
                    }
                    <td>
                        <div style="width:200px">
                            @if (Model.Birim.Kurum.FaaliyetGirisAcik)
                            {
                                <button class="btn btn-sm btn-success btn-faaliyetDuzenle" data-id="@item.Id">Düzenle</button>
                                <button class="btn btn-sm btn-success btn-faaliyetSil" data-id="@item.Id">Sil</button>
                            }
                            @if (Model.Birim.Kurum.FaaliyetDurumGirisAcik)
                            {
                                <button class="btn btn-sm btn-success btn-faaliyetDurum" data-id="@item.Id" data-target="#faaliyetDurum" data-toggle="modal">Durum Gir</button>
                            }
                        </div>
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>

    </div>

</div>
<br />




<div class="modal" id="faaliyetEkle">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/Home/Birim" method="post">
                @*<div class="modal-header">
                        Faaliyet Ekle
                    </div>*@
                <div class="modal-body">
                    <div class="row"><div class="col"><strong>Eylem: </strong><span class="eylemAdi"></span></div></div>
                    <input type="hidden" id="FaaliyetId" name="Id" />
                    <input type="hidden" id="EylemId" name="EylemId" />
                    <input type="hidden" id="BirimId" name="Birim" />
                    <div class="form-group">
                        <h5>Faaliyet Adı:</h5>
                        <textarea id="faaliyetAdi" name="Baslik" rows="5" class="form-control w-100" style="width:100%;max-width:none;"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal" id="faaliyetDurum">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
                    Faaliyet Ekle
                </div>*@
            <div class="modal-body">
                <div class="sp">
                    <div>Eylem: <span class="eylem">............................................</span></div>
                    <div>Faaliyet</div>
                </div>
                <div class="form-group">
                    <label>Faaliyet Kapsamında Gerçekleştirilenler:</label>
                    <textarea rows="4" class="form-control w-100" style="width:100%;max-width:none;"></textarea>
                </div>
                <div class="form-group">
                    <label>Başlama Tarihi:</label>
                    <input class="form-control w-100" type="date" />
                </div>
                <div class="form-group">
                    <label>Bitiş Tarihi:</label>
                    <input class="form-control w-100" type="date" />
                </div>
                <div class="form-group">
                    <label>Çıktı ve Sonuç:</label>
                    <textarea rows="4" class="form-control w-100" style="width:100%;max-width:none;"></textarea>
                </div>

                <div class="form-group">
                    <label>Durum:</label>
                    <select class="form-control" style="width:100%;max-width:none;">
                        <option></option>
                        <option>Devam Ediyor</option>
                        <option>Tamamlandı</option>
                        <option>İptal Edildi</option>
                    </select>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary">Kaydet</button>
                <button class="btn btn-secondary" data-dismiss="modal">İptal</button>
            </div>
        </div>

    </div>
</div>


@section scripts {

    <script type="text/javascript">

        class Faaliyetler {

            //ekle(eylem, faaliyet) {
            //    let dugmelerHtml = this.tabloSatirDugmeSablon(true, true, true);
            //    let st = $(this.tabloSatirSablon(eylem, faaliyet, dugmelerHtml));
            //    $('#tableFaliyetler tbody').append(st);
            //    showTab("faaliyetler");
            //}

            guncelle(row, faaliyet) {
                let satir = $('#faaliyetEkle')[0].row;
                $($(row).children()[1]).text(faaliyet);
                console.log(faaliyet);
                this.SaveFaaliyet(faaliyet);
            }

            sil(button) {
                let satir = $(button).parents("tr");
                console.log(satir);
                satir.hide();
            }

            tabloSatirSablon(faaliyet, dugmelerHtml = "") {
                return `<tr><td>${faaliyet.EylemAdi}</td><td>${faaliyet.FaaliyetAdi}</td><td>${dugmelerHtml}</td></tr>`;
            }



            tabloSatirDugmeSablon(duzenle, sil, durumGir, id) {

                let a = "";
                a += duzenle == true ? `<button class="btn btn-sm btn-success btn-faaliyetDuzenle" data-id="${id}">Düzenle</button> | ` : '';
                a += sil == true ? `<button class="btn btn-sm btn-success btn-faaliyetSil" data-id="${id}">Sil</button> | ` : '';
                a += durumGir == true ? `<button class="btn btn-sm btn-success btn-faaliyetDurum" data-target="#faaliyetDurum" data-toggle="modal" data-id="${id}">Durum Gir</button>` : '';
                return a;

            }

            Load() {
                let id = $('#seciliBirimId').val();
                api_get("/api/BirimFaaliyetler/" + id, function (d) {
                    LoadList(d.Stratejiler);
                    LoadTable(d.Faaliyetler);
                });
            }

            LoadFaaliyetler() {
                let THIS = this;
                let id = $('#seciliBirimId').val();
                api_get("/api/BirimFaaliyetler/" + id, function (d) {
                    THIS.LoadFaaliyetTable(d.Faaliyetler);
                });
            }

            SaveFaaliyet(d) {
                api_post("/api/BirimFaaliyetler", d).done(function () {
                });
            }

            Delete(id) {
                let THIS = this;

                api_delete("/api/Faaliyet/" + id, function (d) {

                    if (d.Success) {

                        successMessage("Silindi");
                        THIS.LoadFaaliyetler();

                    }


                });
            }

            LoadFaaliyetTable(faaliyetler) {
                $('#tableFaliyetler tbody').empty();
                for (var i = 0; i < faaliyetler.length; i++) {
                    const item = faaliyetler[i];
                    console.log(item);
                    let dugmelerHtml = this.tabloSatirDugmeSablon(true, true, true, item.Id);
                    let st = $(this.tabloSatirSablon(item, dugmelerHtml));
                    $('#tableFaliyetler tbody').append(st);
                }

            }
        }


        class FaaliyetForm extends Form {

            Clear() {
                super.Clear();
            }

            New(eylemId, eylemAdi) {
                this.Clear();
                $(this.modalId + "#FaaliyetId").val('');
                $(this.modalId + " #EylemId").val(eylemId);
                $(this.modalId + " .eylemAdi").text(eylemAdi);
                $(this.modalId + " #BirimId").val($('#seciliBirimId').val());
                this.Show();
            }

            Edit(id, eylemAdi) {

                let THIS = this;



                api_get("/api/Faaliyet/" + id, function (d) {
                    //$(THIS.modalId + " #id").val(id);
                    $(THIS.modalId + " .eylemAdi").text(eylemAdi);
                    //$(THIS.modalId + " #eylemId").val(eylemId);
                    //$(THIS.modalId + " #yeniFaaliyetAdi").val(faaliyetAdi);
                    THIS.PutValues(d);
                    THIS.Show();
                });
            }

            Save() {
                let data = this.GetValues();
                let eylem = $("#faaliyetEkle .eylemAdi").text();

                api_post("/api/Faaliyet", data).done(function (d) {

                    if (d.Success) {
                        faaliyet.LoadFaaliyetler();
                        showTab("faaliyetler");
                    }
                });

                return true;
            }


        }



        var faaliyetForm = new FaaliyetForm("#faaliyetEkle");

        var faaliyet = new Faaliyetler();

        function onFaaliyetEkleClickEvent() {

            let eylemAdi = $(this).prev().text();
            let eylemId = $(this).parent().data("id");

            faaliyetForm.New(eylemId, eylemAdi);
        }

        function onFaaliyetDuzenleClickEvent() {
            let id = $(this).data("id");
            let eylemAdi = $(this).parent().parent().prev().prev().text();
            faaliyetForm.Edit(id, eylemAdi);
        }



        function onFaaliyetSilClickEvent() {

            let id = $(this).data("id");

            silmeMesaji("Silmek istediğinize emin misiniz?").then(function (d) {

                if (d) {
                    faaliyet.Delete(id);
                }

            });

        }



        $(document).ready(function () {

            $('.btn-faaliyetEkle').on("click", onFaaliyetEkleClickEvent);
            $(document).on("click", '.btn-faaliyetDuzenle', onFaaliyetDuzenleClickEvent);
            $(document).on("click", '.btn-faaliyetSil', onFaaliyetSilClickEvent);

            $('#id').change(function () {
                let birimId = $(this).val();

                window.location = "/Birim/Index/" + birimId;
            });

        });


    </script>

}
