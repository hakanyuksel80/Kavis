<div class="modal" id="faaliyetDurum">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
                    Faaliyet Ekle
                </div>*@
            <form action="" method="post">
                <div class="modal-body">
                    <input type="hidden" id="FaaliyetId" name="Id" />

                    <div class="sp">
                        <div><label>Eylem:</label><span class="eylem">............................................</span></div>
                        <div><label>Faaliyet:</label><span class="faaliyet"></span></div>
                    </div>
                    <div class="form-group">
                        <label>Faaliyet Kapsamında Gerçekleştirilenler:</label>
                        <textarea name="Gerceklesme" rows="4" class="form-control w-100" style="width:100%;max-width:none;"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Başlama Tarihi:</label>
                        <input name="Baslama" class="form-control w-100" type="date" />
                    </div>
                    <div class="form-group">
                        <label>Bitiş Tarihi:</label>
                        <input name="Bitis" class="form-control w-100" type="date" />
                    </div>
                    <div class="form-group">
                        <label>Çıktı ve Sonuç:</label>
                        <textarea name="Sonuc" rows="4" class="form-control w-100" style="width:100%;max-width:none;"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Durum:</label>
                        <select name="Durum" class="form-control" style="width:100%;max-width:none;">
                            <option></option>
                            <option>Devam Ediyor</option>
                            <option>Tamamlandı</option>
                            <option>İptal Edildi</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-secondary" data-dismiss="modal">İptal</button>
                </div>
            </form>
        </div>

    </div>
</div>

