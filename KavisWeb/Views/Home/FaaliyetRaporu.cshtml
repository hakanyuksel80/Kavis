@model List<KavisWeb.Entities.Views.FaaliyetRaporListView>

@{
    ViewBag.Title = "FaaliyetRaporu";
}

<h2>Faaliyet Raporu</h2>


<div class="row mt-4">
    <div class="col-4">
        <div class="form-group row">
            <label class="col-3">Aktif Yıl</label>
            <div class="col-6">
                <select class="form-control form-control-sm">
                    <option>2021</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-4">
        <div class="form-group row">
            <label class="col-3">Birimler</label>
            <div class="col-6">
                <select class="form-control form-control-sm">
                    <option>Hepsi</option>
                </select>
            </div>
        </div>

        @*<div class="form-group row">
                <label class="col-6">Kurum</label>
                <div class="col-6">
                    <select class="form-control form-control-sm">
                        <option>İl Milli Eğitim</option>
                    </select>
                </div>
            </div>*@




    </div>
    <div class="col-4">
        <button type="button" class="btn btn-primary"> Ara</button>
    </div>
</div>
<div class="row mb-4">
    <div class="col">
        <button type="button" class="btn btn-success float-right"> Yazdır</button>
    </div>
</div>
<div class="row">
    <div class="col">

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th valign="middle">Eylem Adı</th>
                    <th>Faaliyet Adı</th>
                    <th>Başlama ve Bitiş Tarihi</th>
                    <th>Faaliyet Kapsamında Gerçekleştirilenler</th>
                    <th>Çıktı ve Sonuç</th>
                    <th>Durum</th>
                    <th>Sorumlu Birim</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EylemAdi</td>
                        <td>@item.FaaliyetAdi</td>
                        <td>
                            @item.Tarih
                        </td>
                        <td>@item.Gerceklesme</td>
                        <td>@item.Sonuc</td>
                        <td>@item.Durum</td>
                        <td>@item.Birim</td>
                        <td>
                            <div class="" style="width:200px;">
                                <button class="btn btn-sm btn-success" data-id="@item.Id">Sil</button>                                
                                <button class="btn btn-sm btn-success" data-id="@item.Id" data-target="#faaliyetDurum" data-toggle="modal">Degistir</button>
                            </div>
                        </td>
                    </tr>
                }

              
            </tbody>
        </table>

    </div>
</div>
